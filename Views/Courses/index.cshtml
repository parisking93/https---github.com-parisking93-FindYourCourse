
<div class="container">
    <ul>
        <li><a asp-action="Details" asp-controller="Courses" asp-route-id="5">Vai dettagli</a></li>
    </ul>
    <h2>Catalogo dei corsi</h2>
    @for (int i=0; i<= 10 ; i++)
    {
            <div class="row">
        <div class="col-md-2">
            <img src="~/logo.png" alt="" class="w-100">
        </div>
        <div class="col-md-3">
            <h2>Titolo</h2>
            <auhtor>Nome autore</auhtor>
        </div>
        <div class="col-md-3">
            @{
                Random rand = new Random();
                int numero = rand.Next(0,6);
                int numeroMax = 5;
            }
            @for (int il = 0; il < numero ; il++)
            {
                <i class="fa fa-star text-warning" aria-hidden="true"></i>
            }
            @{

                int nNumero = numeroMax - numero;

            }
            @for (int il = 0; il < nNumero ; il++)
            {
                <i class="fa fa-star" aria-hidden="true"></i>
            }
        </div>
        <div class="col-md-2">
            EUR 10,99
        </div>
        <div class="col-md-2">
            <a class="btn btn-primary" asp-controller="Courses" asp-action="Details" asp-route-id="5">Vai</a>
        </div>
    </div>
    }

</div>